<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TasksDetails"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="@drawable/beautyful_back"
            android:backgroundTint="#ffff">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выйграть хакдэй"
                android:textSize="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Место: "/>
                <TextView
                    android:id="@+id/place"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="В офисе"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Начало: "/>
                <TextView
                    android:id="@+id/start"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="21.01.2000, 18:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Окончание: "/>
                <TextView
                    android:id="@+id/end"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="21.01.2081, 23:59"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Напоминан.:"/>
                <TextView
                    android:id="@+id/alarmTextView"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="не установлено"/>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Приоритет: "/>
                <TextView
                    android:id="@+id/priority"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="78"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Статус: "/>
                <TextView
                    android:id="@+id/status"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="не выполнен"/>
            </LinearLayout>
            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="Do it when you are alive, do it when you are alive, do it when you are alive, do it when you are alive, do it when you are alive"/>

            <Button
                android:layout_marginVertical="10dp"
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryYellow"
                android:background="@drawable/buttonstylestartpage"
                android:text="Напоминание"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="@drawable/beautyful_back"
            android:backgroundTint="#ffff">



            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25:00"
                android:textSize="45dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/minus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryYellow"
                    android:background="@drawable/buttonstylestartpage"
                    android:layout_marginLeft="30dp"
                    android:text="-"/>
                <Button
                    android:id="@+id/plus"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryYellow"
                    android:background="@drawable/buttonstylestartpage"
                    android:text="+"/>
            </LinearLayout>
            <Button
                android:id="@+id/startTimer"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryYellow"
                android:background="@drawable/buttonstylestartpage"
                android:text="Start"/>

            <Button
                android:layout_marginBottom="30dp"
                android:id="@+id/resetTimer"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryYellow"
                android:background="@drawable/buttonstylestartpage"
                android:text="Reset"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>