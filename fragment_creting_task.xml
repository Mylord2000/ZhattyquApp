<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CretingTask">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="#434b56">

        <EditText
            android:id="@+id/titleOfTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название задачи"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"

            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/colorWhite"/>

        <EditText
            android:id="@+id/noteOfTask"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_style"
            android:layout_height="wrap_content"
            android:hint="Введите примечание"
            android:padding="10dp"
            android:backgroundTint="@color/colorWhite"/>

        <Spinner
            android:id="@+id/placeOfTask"
            android:background="@drawable/edit_text_style"
            android:backgroundTint="@color/colorWhite"
            android:padding="10dp"
            android:autofillHints="Место"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            >

            <TextView
                android:id="@+id/priorityTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:layout_height="wrap_content"
                android:hint="Приоритет"
                android:textSize="14dp"
                android:padding="10dp"
                android:backgroundTint="@color/colorWhite"/>

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/startTimeOfTaskTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:layout_height="wrap_content"
                android:hint="Начало"
                android:textSize="14dp"
                android:padding="10dp"
                android:backgroundTint="@color/colorWhite"/>
            <TextView
                android:id="@+id/startTimeOfTaskTextView1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_style"
                android:layout_height="wrap_content"
                android:hint="Без даты"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:padding="10dp"
                android:backgroundTint="@color/colorWhite"/>
            <ImageView
                android:backgroundTint="@color/colorWhite"
                android:id="@+id/startTimeOfTaskTextView2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/clock"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/endTimeOfTaskTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:layout_height="wrap_content"
                android:hint="Окончание"
                android:textSize="14dp"
                android:padding="10dp"
                android:backgroundTint="@color/colorWhite"/>
            <TextView
                android:id="@+id/endTimeOfTaskTextView1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_style"
                android:layout_height="wrap_content"
                android:hint="Без даты"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:padding="10dp"
                android:backgroundTint="@color/colorWhite"/>
            <ImageView
                android:backgroundTint="@color/colorWhite"
                android:id="@+id/endTimeOfTaskTextView2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/clock"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/commentOfTask"
            android:background="@drawable/edit_text_style"
            android:layout_height="wrap_content"
            android:hint="Комментарий"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorWhite"/>

        <Button
            android:id="@+id/greatCreatorButton"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/colorPrimaryYellow"
            android:text="Создать"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>