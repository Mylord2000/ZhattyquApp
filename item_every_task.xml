<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/everyTasksCheckbox"
            android:gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/everyTasksTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title of task"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:textSize="12dp"
                android:id="@+id/everyTasksData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:text="c 06.11.2018, 20:00 to 11.11.2018, 18:00"
                android:textColor="@color/colorSimpleText"
                />
            <TextView
                android:textSize="12dp"
                android:id="@+id/everyTasksComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V svobodnoe vremia"
                android:textColor="@color/colorSimpleText"
                />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>